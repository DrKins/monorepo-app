{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "paths": {
      "*": ["../../node_modules/*"]
    },
    "module": "CommonJS",
    "baseUrl": ".",
    "outDir": "./dist",
    "typeRoots": ["./types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
